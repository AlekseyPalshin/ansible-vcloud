sudo docker run \
--volume /nfs/ngseasy/ngs_resources/reference_genomes_hg19:/home/pipeman/ngs_projects/reference_genomes_hg19 \
--name stampy_indexing \
--rm=true \
-e USER=pipeman \
--user=pipeman \
-i -t compbio/ngseasy-stampy:1.0-r001 \
/bin/bash -c \
"python  \
/usr/local/pipeline/stampy-1.0.23/stampy.py \
-G /home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19 \
/home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19.fasta && \
chmod -R 777 /home/pipeman/ngs_projects/reference_genomes_hg19/* && \
python  \
/usr/local/pipeline/stampy-1.0.23/stampy.py \
-g home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19 \
-H /home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19 && \
chmod -R 777 /home/pipeman/ngs_projects/reference_genomes_hg19/*"


chmod -R 777 /nfs/ngseasy/ngs_resources/reference_genomes_hg19/*

sudo dockercmd run \
	--volume /nfs/ngseasy/ngs_resources/reference_genomes_hg19:/home/pipeman/ngs_projects/reference_genomes_hg19 \
	--name bwa_indexing \
	--rm=true \
	-e USER=pipeman \
	--user=pipeman \
	-i -t compbio/ngseasy-bwa:1.0-r001 \
	 /bin/bash -c \
        "/usr/local/pipeline/bwa-0.7.12/bwa index \
        -a bwtsw \
        /home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19.fasta"





