#bwa
sudo docker run \
	--volume /nfs/ngseasy/ngs_resources/reference_genomes_hg19:/home/pipeman/ngs_projects/reference_genomes_hg19 \
	--name bwa_indexing \
	--rm=true \
	-i -t compbio/ngseasy-bwa:1.0-r001 \
	 /bin/bash -c \
        "/usr/local/pipeline/bwa-0.7.12/bwa index \
        -a bwtsw \
        /home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19.fasta"

#bowtie2
sudo docker run \
--volume /nfs/ngseasy/ngs_resources/reference_genomes_hg19:/home/pipeman/ngs_projects/reference_genomes_hg19 \
--name bowtie2_indexing \
-d \
-t compbio/ngseasy-bowtie2:1.0-r001 \
/bin/bash -c \
"/usr/local/pipeline/bowtie2-2.2.4/bowtie2-build \
/home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19.fasta \
/home/pipeman/ngs_projects/reference_genomes_hg19/ucsc.hg19"


